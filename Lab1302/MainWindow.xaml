<Window x:Class="Lab1302.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1302"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock>Текст:</TextBlock>
                <TextBox Name="text" Height="25" Width="80"></TextBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Margin="0 15 0 15" Orientation="Horizontal">
                <TextBlock>Cимвол:</TextBlock>
                <TextBox Name="symbol" Height="25" Width="80"></TextBox>
            </StackPanel>
            <Button Height="25" Click="Button_Click">Искать</Button>
        </StackPanel>
    </Grid>
</Window>
